      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const buttons = document.querySelectorAll("#galeria button");
          const imagemGaleria = document.getElementById("imagem-galeria");
          let activeButton = document.querySelector("#galeria button.active");
  
          buttons.forEach((button) => {
            button.addEventListener("click", function () {
              const imageName = this.getAttribute("data-image");
              imagemGaleria.style.opacity = "0";
              setTimeout(function () {
                imagemGaleria.src = "/images/public-site/" + imageName; 
                imagemGaleria.style.opacity = "1";
              }, 75);
  
              activeButton.classList.remove("active");
              activeButton.classList.remove("btn-primary");
              activeButton.classList.add("btn-outline-primary");
  
              this.classList.add("active");
              this.classList.add("btn-primary");
              this.classList.remove("btn-outline-primary");
  
              activeButton = this;
            });
          });
        });
      </script>
